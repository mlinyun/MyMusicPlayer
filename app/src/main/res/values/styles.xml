<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础应用主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 颜色配置 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- 状态栏配置 -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/colorSurface</item>

        <!-- 导航栏配置 -->
        <item name="android:navigationBarColor">@color/colorSurface</item>

        <!-- 禁用默认ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 播放进度条样式 -->
    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:thumbTint">@color/colorAccent</item>
    </style>

    <!-- 圆形ImageView样式 -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- 按钮样式 -->
    <style name="PlayerButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="tint">@color/colorControlNormal</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- 大按钮样式 -->
    <style name="PlayerButton.Large">
        <item name="android:padding">16dp</item>
    </style>
</resources>
